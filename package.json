  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@emotion/babel-preset-css-prop": "^11.0.0",
    "@prisma/cli": "^2.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/faker": "^5.1.5",
    "@types/javascript-time-ago": "^2.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.20",
    "@types/reach__router": "^1.3.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-plugin-react": "^7.22.0",
    "faker": "^5.1.0",
    "nodemon": "^2.0.7",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@apollo/client": "^3.3.6",
    "@emotion/react": "^11.1.4",
    "@prisma/client": "^2.14.0",
    "@reach/router": "^1.3.4",
    "apollo-server": "^2.19.1",
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "graphql": "^15.4.0",
    "javascript-time-ago": "^2.3.4",
    "jsonwebtoken": "^8.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "scripts": {
    "migrate": "prisma migrate dev --preview-feature",
    "generate": "prisma generate",
    "server": "nodemon --watch 'api/src/**/*.ts'  --exec 'ts-node' api/src/server.ts",
    "refreshServer": "nodemon --watch 'api/src/refreshServer.ts'  --exec 'ts-node' api/src/refreshServer.ts",
    "fillDB": "ts-node api/src/db/mock/fill.ts",
    "wipeDB": "ts-node api/src/db/mock/wipe.ts",
    "lint-client": "eslint client/src/**/*.tsx",
    "lint-api": "eslint api/src/**/*.ts",
    "lint": "yarn lint-client && yarn lint-api",
    "dev": "parcel client/index.html --out-dir client/dist",
    "build": "parcel build client/index.html --out-dir client/dist"
  },
  "prisma": {
    "schema": "api/src/db/prisma/schema.prisma"
  }
}
